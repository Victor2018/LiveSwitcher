<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/cardview_dark_background"
    tools:ignore="MissingDefaultResource,ResourceName">

    <com.quick.liveswitcher.ui.widget.SceneMenu
        android:id="@+id/mSceneMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.quick.liveswitcher.ui.widget.AppMenu
        android:id="@+id/mAppMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.quick.liveswitcher.ui.widget.ImageMenu
        android:id="@+id/mImageMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.quick.liveswitcher.ui.widget.VideoMenu
        android:id="@+id/mVideoMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.quick.liveswitcher.ui.widget.TextMenu
        android:id="@+id/mTextMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.quick.liveswitcher.ui.widget.CameraMenu
        android:id="@+id/mCameraMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>